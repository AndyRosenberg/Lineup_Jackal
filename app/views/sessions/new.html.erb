<h1 class="ml-2 mt-2">Log In</h1>
<hr  class="ml-3 col-md-3" />
<div class="jumbotron">
  <%= bootstrap_form_with url: "/login" do |form| %>
    <%= form.text_field :username, bootstrap: {label: {value: "Create Username:", class: "ml-3"}}, class: "ml-3 col-md-6" %>
    <%= form.password_field :password , bootstrap: {label: {value: "Set Password:", class: "ml-3"}}, class: "ml-3 col-md-6" %>
    <%= form.submit "Log In", class: "ml-3" %>
  <% end %>
</div>
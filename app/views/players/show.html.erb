<div class="text-center">
  <h1 class="p-3 bland-h1"><%= @player['full_name'] %> (<%= "#{@player['position']} - #{@player['team']}" %>)</h1>
  <article class="d-block pt-4 pl-4 pr-4 player-show w-75 mx-auto">
    <figure class="roster-figure">
      <img src=<%= @player['image'] %> />
      <figcaption>
        <small><em>fantasyfootballnerd.com</em></small>
      </figcaption>
    </figure>
    <aside class="mb-3 ml-1">
      <dl>
        <% unless @player['position'] == 'DEF' %>
          <dt>
            Injuries:
          </dt>
          <dd>
            <%= @player["injuries"] %>
          </dd>
        <% end %>
        <dt>
          Projected This Week (<%= @player["schedule"] %>):
        </dt>
        <dd>
          <%= @player["weekly_standard"] %> points (standard)
        </dd>
        <dd>
          <%= @player["weekly_ppr"] %> points (ppr)
        </dd>

        <dt>
          Projected This Year:
        </dt>
        <dd>
          <%= @player['projected'] %> points
        </dd>
        <hr />

        <div class="container text-left w-75">
          <dt class="text-left h4">
            Season Stats*:
          </dt>
          <dd>
              <p><b>This Year:</b></p>
              <%= render 'stat', stat: @player['wty'] %>
          </dd>
          <dd>
              <p><b>Past Seasons:</b></p>
              <%= render 'stat', stat: @player['l5'][0...-1] %>
          </dd>
        </div>

        <% unless @player['position'] == 'DEF' %>
          <dt>
            More info:
          </dt>
          <dd>
            <%= link_to "4for4", @player["links"]["for4"], target: "_blank", class: "plink bland-h1" %> | 
            <%= link_to "FFNerd", @player["links"]["ffnerd"], target: "_blank", class: "plink bland-h1" %>
          </dd>
        <% end %>

      </dl>
    </aside>
    <br />
    <%= link_to "Back", :back, class: "btn btn-default btn-lg" %>
    <p class="text-right"><small><em>*ESPN PPR scoring</em></small></p>
  </article>
</div>
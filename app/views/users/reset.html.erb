<h1 class="ml-2 mt-2">Set New Password</h1>
<hr  class="ml-3 col-md-3" />
<div class="jumbotron">
  <%= bootstrap_form_with url: validate_reset_users_path(@user.token) do |form| %>
    <%= form.password_field :password , bootstrap: {label: {value: "Set New Password:", class: "ml-3"}}, class: "ml-3 col-md-6", minlength: "7" %>
    <%= form.submit "Send Reset Link", class: "ml-3" %>
  <% end %>
</div>